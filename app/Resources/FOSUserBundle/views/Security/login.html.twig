

{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Log In{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    {% stylesheets
    'bundles/wdcsthemescore3rdparty/bootstrap/css/bootstrap.min.css'
    'bundles/wdcsthemescore3rdparty/admin-lte/css/AdminLTE.min.css'
    'bundles/wdcsthemescore3rdparty/admin-lte/css/skins/_all-skins.min.css'
    'bundles/wdcsthemescore3rdparty/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css'
    'bundles/wdcsthemescore3rdparty/css/font-awesome.min.css'
    'bundles/wdcsthemescore3rdparty/css/ionicons.min.css'
    filter='cssrewrite'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="hold-transition login-page">

{% block fos_user_content %}
    <div class="login-box">
        <div class="login-logo">
            {{ block('title') }}
        </div><!-- /.login-logo -->
        {#{% block fos_user_content %}#}
            <div class="login-box-body">
                <p class="login-box-msg">Sign in to start your session me</p>
                {% if error %}
                    <p class="login-box-msg">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="form-group has-feedback">
                    <input type="text" class="form-control"
                           id="username" name="_username" value="{{ last_username }}" required="required"
                           placeholder="{{ 'security.login.username'|trans }}">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control"  id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me"> {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                    </div><!-- /.col -->

                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                    </div><!-- /.col -->
                </div>
            </form>

            <a href="{{ url('fos_user_resetting_request') }}">I forgot my password</a><br>
            <a href="{{ url('fos_user_registration_register') }}" class="text-center">Register a new membership</a>

        </div><!-- /.login-box-body -->
        {% endblock fos_user_content %}
    </div><!-- /.login-box -->


<!-- jQuery 2.1.4 -->
<script src="{{ asset('bundles/wdcsthemescore3rdparty/jQuery/jQuery-2.1.4.min.js') }}"></script>
<!-- Bootstrap 3.3.5 -->
<script src="{{ asset('bundles/wdcsthemescore3rdparty/bootstrap/js/bootstrap.min.js') }}"></script>

</body>
</html>
