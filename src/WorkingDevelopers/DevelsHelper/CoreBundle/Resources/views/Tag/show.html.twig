{% extends 'DhThemesCoreThemeBundle:Default:base.html.twig' %}

{% block cotent -%}
    <h1>Tag</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
            <tr>
                <th>Hierarchylft</th>
                <td>{{ entity.hierarchyLft }}</td>
            </tr>
            <tr>
                <th>Hierarchyrgt</th>
                <td>{{ entity.hierarchyRgt }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('dh_admin_tag') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('dh_admin_tag_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
