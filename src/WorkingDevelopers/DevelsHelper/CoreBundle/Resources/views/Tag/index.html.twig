{% extends 'DhThemesCoreThemeBundle:Default:base.html.twig' %}

{% block title %}
  Tag list
{% endblock %}

{% block content -%}
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Snippet list</h3>
    <div class="box-tools">
      <div class="input-group" style="width: 150px;">
        <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
        <div class="input-group-btn">
          <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div><!-- /.box-header -->

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover records_list">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Active</th>
        {#<th>Hierarchylft</th>#}
        {#<th>Hierarchyrgt</th>#}
        <th>Dates</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
        <tr>
          <td><a href="{{ path('dh_admin_tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
          <td>{{ entity.name }}</td>
          <td>{{ entity.description }}</td>
          <td>{{ entity.active }}</td>
          {#<td>{{ entity.hierarchyLft }}</td>#}
          {#<td>{{ entity.hierarchyRgt }}</td>#}
          <td>Created At: {{ entity.createdAt|date }}
          <br/>Updated At: {{ entity.updatedAt|date }}</td>
          <td>
            <ul>
              <li>
                <a href="{{ path('dh_admin_tag_show', { 'id': entity.id }) }}">show</a>
              </li>
              <li>
                <a href="{{ path('dh_admin_tag_edit', { 'id': entity.id }) }}">edit</a>
              </li>
            </ul>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div><!-- /.box-body -->
</div><!-- /.box -->

<div>
        <a class="btn btn-block btn-success" href="{{ path('dh_admin_tag_new') }}">
          Create a new entry
        </a>
  </div>
    {% endblock %}
