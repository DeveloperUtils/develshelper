{% extends 'WdCsThemesCoreThemeBundle:Default:base.html.twig' %}

{% block content -%}
    <h1>Tag list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Active</th>
                <th>Hierarchylft</th>
                <th>Hierarchyrgt</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('wd_cs_admin_tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.active }}</td>
                <td>{{ entity.hierarchyLft }}</td>
                <td>{{ entity.hierarchyRgt }}</td>
                <td>{{ entity.createdAt|date }}</td>
                <td>{{ entity.updatedAt|date }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('wd_cs_admin_tag_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('wd_cs_admin_tag_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('wd_cs_admin_tag_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
